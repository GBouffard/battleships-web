<div>
  Hello <%= @player.name %>

  Your board:
  <table border="2">  
  <% (0..@board.side_length).each do |row| %>      
  <tr>
    <% (0..@board.side_length).each do |column| %>
      <% if row == 0 %>
        <td> 
          <%= column unless column == 0 %> 
        </td>
      <% else %>
        <td> 
          <%= (row+64).chr %><%= column unless column == 0 %>
        </td>
      <% end %>
    <% end %>
  </tr>

  <% end %>
  </table>
</div>
